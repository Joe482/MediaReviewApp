@page "{id:int}"
@model MediaReviewApp.Pages.Reviews.DeleteModel
@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<h3>Are you sure you want to delete this review?</h3>

<div>
    <h4>@Model.Review.Title</h4>
    <p>@Model.Review.Category</p>
    <p>@Model.Review.ReviewText</p>
    <p>@Model.Review.Rating out of 5</p>
    <p>@Model.Review.DateReviewed.ToString("d")</p>
</div>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
