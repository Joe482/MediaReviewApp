@page
@model MediaReviewApp.Pages.Reviews.CreateModel

<h2>Create New Review</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Review.Title" class="control-label"></label>
        <input asp-for="Review.Title" class="form-control" />
        <span asp-validation-for="Review.Title" class="text-danger"></span>
    </div>

    <!-- Category Dropdown -->
    <div class="form-group">
        <label asp-for="Review.Category" class="control-label">Category</label>
        <select asp-for="Review.Category" class="form-control">
            <option value="">-- Select Category --</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category">@category</option>
            }
        </select>
        <span asp-validation-for="Review.Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Review.ReviewText" class="control-label"></label>
        <textarea asp-for="Review.ReviewText" class="form-control"></textarea>
        <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Review.Rating" class="control-label"></label>
        <input asp-for="Review.Rating" class="form-control" />
        <span asp-validation-for="Review.Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Review.DateReviewed" class="control-label"></label>
        <input asp-for="Review.DateReviewed" class="form-control" type="date" />
        <span asp-validation-for="Review.DateReviewed" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
